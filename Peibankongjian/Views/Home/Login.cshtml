
<div class="container" style="margin-top:20px;margin-bottom: 150px;">

    <div class="row">
        <div class="col-md-6">
            <h3 style="margin: 20px 0px 40px 0px;">登陆</h3>
            <div class="row">
                
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal", @name = "LoginForm", @id = "LoginForm" }))
                {
                    <div class="form-group">
                       
                        <label class="control-label col-sm-2">手机账号</label>
                        <div class="col-sm-9">
                            <input class="form-control" name="username" id="username" type="text" placeholder="请输入手机号" />
                        </div>
                    </div>

                    <div class="form-group">
                       
                        <label class="control-label col-sm-2">密码</label>
                        <div class="col-sm-9">
                            <input class="form-control" name="password" id="password" type="password" placeholder="请输入密码" />
                        </div>
                    </div>

                    <div class="form-group">

                        
                        <div class="col-sm-6 col-sm-offset-2">
                            <span class="pull-left"><a href="###">忘记密码？</a></span>
                            <button class="btn btn-success pull-right">&nbsp;&nbsp;&nbsp;登陆&nbsp;&nbsp;&nbsp;</button>
                        </div>
                    </div>

                }

            </div>
           
        </div>
        <div class="col-md-6" style="margin-top: 80px;">
            没有账号？点击这里注册一个
        </div>
    </div>

</div>


@section BottomScripts {
    <script type="text/javascript">
       
    </script>
}
