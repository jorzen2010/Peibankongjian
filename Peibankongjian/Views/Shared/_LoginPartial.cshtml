@if (Session["renname"] != "" && Session["renname"] != null)
{
    <ul class="nav navbar-nav navbar-right  hidden-sm">
        <li class="dropdown">
            <a href="@Url.Action("Ucenter", "Ucenter")" class="dropdown-toggle" data-toggle="dropdown">
                @Session["renname"]
                <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">


                <li><a href="@Url.Action("Index", "UHome")">我的陪伴空间</a></li>
                <li class="divider"></li>
                @if (Session["Vip"] == "false")
                {
                    <li><a href="@Url.Action("ShenqingPeiban", "UHome", new { cid=1})">开通VIP会员</a></li>
                    <li class="divider"></li>
                }
                @if (Session["Peibanshi"] == "false")
                {
                    <li><a href="@Url.Action("ShenqingPeiban", "UHome", new { cid=2})">申请成为陪伴师</a></li>
                    <li class="divider"></li>
                }
                <li><a href="@Url.Action("AccountSetting", "Ucenter")">账号设置</a></li>
                <li class="divider"></li>
                <li><a href="@Url.Action("Logout","RenAccount")">退出</a></li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right hidden-sm">
        <li>@Html.ActionLink("登陆", "Login", "RenAccount")</li>
        <li>@Html.ActionLink("后台登录", "Login", "AdminAccount")</li>
    </ul>
}